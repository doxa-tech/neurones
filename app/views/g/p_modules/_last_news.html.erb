<div id="module_<%= comp_page.id %>" class="module_news">

	<% if (news = current_group.news.where('date_exp >=?', [Time.zone.now]).order('date_exp ASC')) %>
		<% news.each do |new| %>
			<div class="new">
				<h3><%= new.title %> <sup>(Ã©crit le <%= l new.created_at, format: :short %>) (expire le <%= l new.date_exp, format: :short %>)</sup></h3>
				<p><%= raw simple_format(new.content, {}, sanitize: false) %></p>
			</div>
		<% end %>
		<% else %>
		<p>Pas de news pour l'instant.</p>
	<% end %>

</div>
<div id="text_<%= comp_page.text.id %>">
	<%= render 'admin/g/texts/show', text: comp_page.text %>
</div>